<style>
  .cloud-container {
    border-top: 2px solid rgb(180, 180, 180);
    border-bottom: 2px solid rgb(180, 180, 180);
    grid-column: full-width;
    height: 8rem;
    z-index: -10;
    background-color: #78bdff;
    background: linear-gradient(
      to bottom,
      #5d99d1 15%,
      #75b4ef 80%,
      #b8d3ec 100%
    );
  }
  
  .cloud-container-dark {
    border-top: 2px solid rgb(180, 180, 180);
    border-bottom: 2px solid rgb(180, 180, 180);
    grid-column: full-width;
    height: 8rem;
    z-index: -10;
    background-color: #2d3e50;
    background: linear-gradient(
			to bottom,
			#071d34 0%,
			#2d3e50 50%,
			#4b6b8a 75%,
			#6d8ea3 100%
		);
  }

  #cloud-intro {
    --cloud-1: 120px;
    --cloud-2: 200px;
    --cloud-3: 150px;
    --cloud-4: 0px;
    height: 100%;
    grid-column: full-width;
    background: url(/images/clouds1000.png);
    background:
      url(/images/clouds1000.png) 0 var(--cloud-1),
      url(/images/clouds1200_1.png) 0 var(--cloud-2),
      url(/images/clouds800_blur3.png) 0 var(--cloud-3),
      url(/images/logos1600.png) 0 var(--cloud-4);
    animation: windy 8s linear infinite;
    background-size: auto 150px;
  }

  @keyframes windy {
    0% {
      background-position:
        0 var(--cloud-1),
        0 var(--cloud-2),
        0 var(--cloud-3),
        0 var(--cloud-4);
    }

    100% {
      background-position:
      1000px var(--cloud-1),
        1200px var(--cloud-2),
        800px var(--cloud-3),
        1600px var(--cloud-4);
    }
  }
</style>
